<h1>
  New director
</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: #f222a2;">
    <%= message %>
  </p>
<% end %>

<%= form_with(model: @director, data: { turbo: false}) do |form|%>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :dob %>
    <%= form.text_field :dob, type:"date"%>
  </div>
  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio, rows: 3%>
  </div>
    <%= form.button %>
<% end %>
